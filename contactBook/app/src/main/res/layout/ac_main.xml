<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Ac_main">

    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.sunland.contactbook.customView.CancelableEdit
            android:id="@+id/app_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/search_background"
            android:drawableLeft="@drawable/ic_search_24dp"
            android:drawableRight="@drawable/ic_cancel_24dp"
            android:gravity="center_vertical"
            android:hint="姓名，警号，短号，手机号或办公室电话检索"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:textSize="13sp" />

        <TextView

            android:singleLine="true"
            android:id="@+id/enter_query"
            android:gravity="center_vertical|left"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:text="查询"
            android:textColor="@color/selector_ac_main_text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <FrameLayout
        android:id="@+id/deps_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/contactList"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
    </FrameLayout>
</LinearLayout>